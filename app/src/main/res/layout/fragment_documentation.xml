<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/default_margin_horizontal"
    android:background="#FFF"
    android:orientation="vertical">

    <TextView
        style="@style/Theme.BusinessFinder.DescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Услуги, которые Вы можете получить в выбранной подкатегории"
        android:textAlignment="center"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notariusButton"
        style="@style/Theme.BusinessFinder.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="Нотариус"
        android:textColor="@color/title_text_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buhButton"
        style="@style/Theme.BusinessFinder.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="Бухгалтер"
        android:textColor="@color/title_text_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lawButton"
        style="@style/Theme.BusinessFinder.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="Юрист"
        android:textColor="@color/title_text_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/taxButton"
        style="@style/Theme.BusinessFinder.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="Налоги"
        android:textColor="@color/title_text_color" />

</LinearLayout>