<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_profile"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/description_text_color" />

    <TextView
        android:id="@+id/companyName"
        style="@style/Theme.BusinessFinder.TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:textSize="18sp"
        tools:text="Название предприятия" />

    <TextView
        android:id="@+id/bin"
        style="@style/Theme.BusinessFinder.TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:textSize="18sp"
        tools:text="БИН предприятия" />

    <TextView
        android:id="@+id/email"
        style="@style/Theme.BusinessFinder.TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:textSize="18sp"
        tools:text="Почта" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/description_text_color" />

    <TextView
        android:id="@+id/interests"
        style="@style/Theme.BusinessFinder.TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:text="Мои интересы"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/partners"
        style="@style/Theme.BusinessFinder.TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:text="Мои партнеры"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/offers"
        style="@style/Theme.BusinessFinder.TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:text="Мои предложения"
        android:textSize="18sp" />

</LinearLayout>